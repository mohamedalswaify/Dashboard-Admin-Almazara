            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: 'https://myserverhost-001-site1.itempurl.com/api/customers/DeleteImage',
                        type: 'GET',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
