<script>
    function openFileUploader(attachmentId) {
        $('#uploadImageInput_' + attachmentId).click();
    }

    function uploadImage(inputElement, attachmentId) {
        var file = inputElement.files[0];
        if (file) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var imageElement = $('#imagePreview_' + attachmentId);
                if (imageElement.length > 0) {
                    imageElement.attr('src', e.target.result);
                } else {
                }
            };
            reader.readAsDataURL(file);
        } else {
        }

        var formData = new FormData();
        var fileInput = document.getElementById('uploadImageInput_' + attachmentId);
        var file = fileInput.files[0];
        var attachmentId = @Model.Id;
        formData.append('file', file);
        formData.append('attachmentId', attachmentId);

        $.ajax({
            url: 'https://myserverhost-001-site1.itempurl.com/api/customers/UploadImage',
            type: 'POST',
            headers: { 'attachmentId': attachmentId },
            data: formData,
            processData: false,
            contentType: false,
            success: function (data) {
                Swal.fire({
                    icon: 'success',
                    iconColor: '#3085d6',
                    title: 'تم تعديل الصورة بنجاح',
                    showConfirmButton: true,
                    confirmButtonColor: '#3085d6',
                    confirmButtonText: 'تم',
                });
            },
            error: function () {
                alert("فشل في تحديث الصورة");
            }
        });
    }
</script>
<script>
    function uploadImaged(input, id) {
        if (input && input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                if (id === 'global') {
                    var newId = 'image_' + new Date().getTime();
                    var li = document.createElement('li');
                    document.querySelector('.cocoe').appendChild(li);
                    var attachmentId = @Model.Id;
                    var formData = new FormData();

                    formData.append('file', input.files[0]);
                    formData.append('attachmentId', @Model.Id);

                    $.ajax({
                        url: 'https://myserverhost-001-site1.itempurl.com/api/customers/AddedImage',
                        type: 'POST',
                        headers: {'attachmentId': attachmentId },
                        data: formData,
                        processData: false,
                        contentType: false,
                        success: function (data) {
                            Swal.fire({
                                icon: 'success',
                                iconColor: '#3085d6',
                                title: 'تم اضافة الصورة بنجاح',
                                showConfirmButton: true,
                                confirmButtonColor: '#3085d6',
                                confirmButtonText: 'تم',
                            });
                            var li = document.createElement('li');

                            var divClose = document.createElement('div');
                            divClose.classList.add('btnclose');
                            divClose.setAttribute('data-id', data.id);
                            divClose.innerHTML = '<i class="ri-close-circle-line"></i>';
                            li.appendChild(divClose);

                            var anchorLink = document.createElement('a');
                            anchorLink.style.cursor = 'pointer';
                            anchorLink.classList.add('popup-link');
                            anchorLink.onclick = function () {
                                openFileUploader(data.id);
                            };

                            var imagePreview = document.createElement('img');
                            imagePreview.id = 'imagePreview_' + data.id;
                            imagePreview.src = e.target.result;
                            imagePreview.width = '140';
                            imagePreview.height = '140';
                            imagePreview.alt = 'image description';
                            anchorLink.appendChild(imagePreview);

                            li.appendChild(anchorLink);

                            var uploadInput = document.createElement('input');
                            uploadInput.type = 'file';
                            uploadInput.id = 'uploadImageInput_' + data.id;
                            uploadInput.style.display = 'none';
                            uploadInput.onchange = function () {
                                var newId = 'image_' + data.id;
                                uploadImage(this, data.id);
                            };
                            li.appendChild(uploadInput);

                            document.querySelector('.cocoe').appendChild(li);
                        },
                        error: function () {
                            alert("فشل في تحديث الصورة");
                        }
                    });
                } else {
                    document.getElementById('imagePreview_' + id).src = e.target.result;
                }
            };
            reader.readAsDataURL(input.files[0]);
        } else {
        }
    }



    function openFileUploader(id) {
