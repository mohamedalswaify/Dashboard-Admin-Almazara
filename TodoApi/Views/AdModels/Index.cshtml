        for (var i = 1; i <= totalPages; i++) {
            pagination.append(`<li class="page-item"><a class="page-link" href="#">${i}</a></li>`);
        }

        pagination.append(`<li class="page-item" id="nextPage"><a class="page-link" href="#">›</li>`);

