@model IEnumerable<TodoApi.Models.Employee>
@inject BloggingContext context
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.rtl.min.css" />
<style>
    .fade:not(.show) {
        display: none
    }

    table {
        text-align: center !important
    }

    .select2 {
        direction: rtl !important
    }

    .select2-search__field {
        direction: rtl !important
    }

    .select2-results__options {
        direction: rtl !important
    }

    .form-select {
        background-position: left.75rem center !important
    }

    #popup1 {
        cursor: pointer;
        display: flex;
        justify-content: center;
    }

    .box {
        width: 40%;
        margin: 0 auto;
        background: rgba(255,255,255,0.2);
        padding: 35px;
        border: 2px solid #fff;
        border-radius: 20px/50px;
        background-clip: padding-box;
        text-align: center;
    }

    .button {
        font-size: 1em;
        padding: 10px;
        color: #fff;
        border: 2px solid #4154f1;
        border-radius: 20px/50px;
        text-decoration: none;
        cursor: pointer;
        transition: all 0.3s ease-out;
    }

        .button:hover {
            background: #4154f1;
        }

    .overlay {
        position: fixed;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(0, 0, 0, 0.7);
        transition: opacity 150ms;
        visibility: hidden;
        opacity: 0;
    }

        .overlay:target {
            visibility: visible;
            opacity: 1;
        }

    .popup {
        margin: 70px auto;
        padding: 20px;
        background: #fff;
        border-radius: 5px;
        width: 50%;
        position: relative;
    }

        .popup h2 {
            margin-top: 0;
            color: #333;
            font-family: Tahoma, Arial, sans-serif;
        }

        .popup .close {
            position: absolute;
            top: 20px;
            left: 30px;
            transition: all 200ms;
            font-size: 30px;
            font-weight: bold;
            text-decoration: none;
            color: #333;
        }

            .popup .close:hover {
                color: #4154f1;
            }

        .popup .content {
            max-height: 30%;
        }

    header, aside {
        z-index: 0 !important
    }

    @@media screen and (max-width: 700px) {
        .box {
            width: 70%;
        }

        .popup {
            width: 70%;
        }
    }

    table {
        text-align: center !important;
    }

    .toke label {
        font-weight: bold;
    }

    .no-data {
        text-align: center;
        display: none;
        font-weight: bold
    }

    .datatable-pagination-list .page-item.active .page-link {
        background-color: #d9d9d9;
        border-color: #d9d9d9;
        color: #000;
    }

    .page-link {
        border: none
    }

    .acti {
        background: #d9d9d9 !important
    }

    .datatable-pagination a:hover, .datatable-pagination button:hover {
        border: none !important
    }

    .sort-btn {
        background: none;
        border: none;
        font-weight: bold;
        position: relative
    }

        .sort-btn::before, .sort-btn::after {
            content: "";
            height: 0;
            width: 0;
            position: absolute;
            right: -16px;
            border-left: 4px solid transparent;
            border-right: 4px solid transparent;
            opacity: 0.2;
            top: 20px;
        }

        .sort-btn::before {
            border-top: 4px solid #000;
            bottom: 0px !important;
        }

        .sort-btn::after {
            border-bottom: 4px solid #000;
            border-top: 4px solid transparent;
            top: 0px !important;
        }
</style>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

<div class="pagetitle">
    <h1>مستخدمــي النظام</h1>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">ادارة بيانات المستخدمين</h5>

                    <div class="card-body">
                        <table class="table datatable">
                            <thead>
                                <tr>
                                    <th>الرقم التعريفي</th>
                                    <th>اسم المستخدم</th>
                                    <th>البريد الالكتروني</th>
                                    <th> كلمة المرور</th>
                                    <th>العمليات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            <span class="passwordText" style="display: none;">@Html.DisplayFor(modelItem => item.Password)</span>
                                            <span class="maskedText">********</span>
                                            <a href="javascript:void(0);" class="togglePassword">
                                                <i class="ri-eye-fill text-secondary"></i>
                                            </a>
                                            <a href="javascript:void(0);" class="togglePassword" style="display: none;">
                                                <i class="ri-eye-off-fill"></i>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="EditEmployee" asp-route-id="@item.Id"><i class="bi bi-gear text-success"></i></a>
                                            <a href="#" class="delete-btn" data-id="@item.Id"><i class="bi bi-x-octagon-fill text-danger"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="text-start">
                            <a asp-action="CreateEmployee" class="btn btn-dark">اضافة مستخدم</a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.full.min.js"></script>

<script>
    $(document).ready(function () {


        $('.delete-btn').click(function (event) {
            event.preventDefault();
            var id = $(this).data('id');

            Swal.fire({
                title: 'هل أنت متأكد؟',
                text: "لن تتمكن من التراجع عن هذا!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'نعم، احذفها!',
                cancelButtonText: 'تراجع',

            }).then((result) => {
                if (result.isConfirmed) {
                    $.ajax({
                        url: '/SettingsApp/DeleteRow',
                        type: 'GET',
                        data: { id: id },
                        success: function (response) {
                            if (response.success) {
                                Swal.fire(
                                    'تم الحذف!',
                                    'تم حذف العنصر بنجاح.',
                                    'success'
                                );
                                $('a[data-id="' + id + '"]').closest('tr').remove();
                            } else {
                                Swal.fire(
                                    'خطأ!',
                                    'حدث خطأ أثناء الحذف.',
                                    'error'
                                );
                            }
                        }
                    });
                }
            });
        });
    });
</script>


<script>
    document.addEventListener('DOMContentLoaded', function () {
        var toggleLinks = document.querySelectorAll('.togglePassword');

        toggleLinks.forEach(function (link) {
            link.addEventListener('click', function () {
                var passwordText = link.parentElement.querySelector('.passwordText');
                var maskedText = link.parentElement.querySelector('.maskedText');
                var eyeIcon = link.parentElement.querySelector('.ri-eye-fill');
                var eyeOffIcon = link.parentElement.querySelector('.ri-eye-off-fill');

                if (passwordText.style.display === 'none') {
                    passwordText.style.display = 'inline';
                    maskedText.style.display = 'none';
                    eyeIcon.parentElement.style.display = 'none';
                    eyeOffIcon.parentElement.style.display = 'inline';
                } else {
                    passwordText.style.display = 'none';
                    maskedText.style.display = 'inline';
                    eyeIcon.parentElement.style.display = 'inline';
                    eyeOffIcon.parentElement.style.display = 'none';
                }
            });
        });
    });
</script>






